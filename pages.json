		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/Index/Index"
			},
			{
				"text": "分类",
				"pagePath": "pages/Category/Category"
			},
			{
				"text": "动态",
				"pagePath": "pages/Find/Find"
			},
			{
				"text": "工具",
				"pagePath": "pages/Publish/Publish"
			},
			{
				"text": "我的",
				"pagePath": "pages/Account/Account"
			}
		]
